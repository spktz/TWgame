<Page x:Class="TankWarsGame.View.Pages.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TankWarsGame.View.Pages"
      mc:Ignorable="d" 
     Height="800" Width="800"
      Title="GamePage"
      Background="Black">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/View/Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    
    <Grid x:Name="GameCanvasContainer"
      KeyDown="Page_KeyDown"   
        Focusable="True">

        <Canvas x:Name="GameCanvas"
                Focusable="True"
                Background="Black">
            <Image x:Name="tankPlayerImg"
                   Source="/Assets/player1Tank.png"
                   Width="35" Height="35"
                   RenderTransformOrigin="0.5,0.5" Canvas.Left="10" Canvas.Top="10" Stretch="Fill"/>
        </Canvas>

        <TextBlock x:Name="SpawnInfo"
                 Text=" "
                 FontSize="16"
                 Foreground="White"
                 Background="#66000000"
                 Padding="5"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Top"
                 Margin="0,10,10,0"
                 Width="306" Height="73"/>
        <TextBlock x:Name="ScoreLabel"
                Text="Score: 0"
                FontSize="20"
                Padding="5"
                FontWeight="Bold"
                Foreground="White" 
               
                Margin="654,46,28,722"/>
        <TextBlock x:Name="HeartsLabel"
                Text="♡♡♡♡♡"
                FontSize="35"
               
                Foreground="Red"
                Margin="484,41,186,718"
                />

        <Grid x:Name="PauseOverlay"
          Visibility="Collapsed"
          Background="#CC000000"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                
                <TextBlock Text="Пауза"
                       FontSize="48"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
                <Button Content="Продовжити"
                    Style="{StaticResource MenuButtonStyle}"
                    Click="ResumeButton_Click"/>
                <Button Content="Меню"
                   Style="{StaticResource MenuButtonStyle}"
                    Click="BackToMenuButton_Click"/>
            </StackPanel>
        </Grid>

        <Grid x:Name="GameOverOverlay"
              Visibility="Collapsed"
              Background="#CC000000"
            HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">

            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBlock Text="ГРА ЗАВЕРШЕНА"
                           FontSize="48"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                <Button Content="Перезапустити"
                       Style="{StaticResource MenuButtonStyle}"
                        Click="RestartButton_Click"/>
                <Button Content="Меню"
                       Style="{StaticResource MenuButtonStyle}"
                        Click="BackToMenuButton_Click"/>
            </StackPanel>
        </Grid>

        <Grid x:Name="VictoryOverlay"
                  Visibility="Collapsed"
                  Background="#CC000000"
                HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">

                <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">
                  <TextBlock Text="ПЕРЕМОГА!"
                   FontSize="48"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
                    <Button Content="Перезапустити"
                   Style="{StaticResource MenuButtonStyle}"
                    Click="RestartButton_Click"/>
                    <Button Content="Меню"
                    Style="{StaticResource MenuButtonStyle}"
                    Click="BackToMenuButton_Click"/>
                </StackPanel>

        </Grid>

        <Grid x:Name="WaveOverlay"
              Visibility="Collapsed"
              Background="#CC000000"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">

            <TextBlock x:Name="WaveLabel"
                       Text="Хвиля 1/5"
                       FontSize="48"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Page>